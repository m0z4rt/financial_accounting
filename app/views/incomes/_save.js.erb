$("ul.errors").html("")
<% if @income.errors.any? %>
<% @income.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
<% end %>
<% else %>
$(".income-index").html("<%= escape_javascript(render 'index') %>")
$(".total-incomes").html("<%= escape_javascript(render 'total_incomes') %>")
$(".paging").html("<%= escape_javascript(render 'paging') %>")
$("#income-modal").modal("hide")
<% end %>