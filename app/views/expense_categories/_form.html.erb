<%= bootstrap_form_for @expense_category, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-11", remote: true do |f| %>
    <div class="modal-body">
      <%= f.text_field :name %>
      <%= f.hidden_field :account_id %>
    </div>
    <div class="modal-footer">
      <%= f.primary %>
      <%= link_to "Cancel", "#", class: "btn btn-danger", data: {dismiss: "modal"} %>
    </div>
<% end %>