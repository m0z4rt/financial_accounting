<div class="container">
  <div class="well well-sm">
    <%= link_to "New Category", new_expense_category_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-category"></div>
  <table class="table table-bordered table-striped table-hover table-condensed">
    <thead>
    <tr>
      <th>Name</th>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
    </thead>
    <tbody class="category-index">
    <%= render "index" %>
    </tbody>
  </table>
  <div class="paging">
    <%= render "paging" %>
  </div>
</div>
<div id="category-modal" class="modal fade">
  <div class="modal-dialog">
    <div id="inner-category-modal" class="modal-content"></div>
  </div>
</div>