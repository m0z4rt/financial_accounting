<div class="center jumbotron modal-dialog">
  <div class="modal-header">
    <h2>Sign up</h2>
  </div>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "8 characters minimum" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "8 characters minimum" %>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
  <% end %>
  </br>
  <%= render "devise/shared/links" %>
</div>