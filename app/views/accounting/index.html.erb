<div class="container">
  <div class="well well-sm">
    <%= link_to "New Income", new_income_path, remote: true, class: "btn btn-primary" %>
    <%= link_to "New Expense", new_expense_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-record"></div>
  <table class="table table-bordered table-striped table-hover table-condensed">
    <thead>
    <tr>
      <th>Name</th>
      <th>Record</th>
      <th>Created</th>
      <th>Last updated</th>
    </tr>
    </thead>
    <tbody class="records-index">
    <%= render "index" %>
    </tbody>
  </table>
  <div class="balance">
    <%= render "balance" %>
  </div>
</div>
<div id="income-modal" class="modal fade">
  <div class="modal-dialog">
    <div id="inner-income-modal" class="modal-content"></div>
  </div>
</div>
<div id="expense-modal" class="modal fade">
  <div class="modal-dialog">
    <div id="inner-expense-modal" class="modal-content"></div>
  </div>
</div>