<div class="container">
  <div class="well well-sm">
    <%= link_to "New Expense", new_expense_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-expense"></div>
  <table class="table table-bordered table-striped table-hover table-condensed">
    <thead>
    <tr>
      <th>Name</th>
      <th>Expense</th>
      <th>Created</th>
      <th>Last updated</th>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
    </thead>
    <tbody class="expense-index">
    <%= render "index" %>
    </tbody>
  </table>
  <div class="total-expenses">
    <%= render "total_expenses" %>
  </div>
  <div class="paging center">
    <%= render "paging" %>
  </div>
</div>
<div id="expense-modal" class="modal fade">
  <div class="modal-dialog">
    <div id="inner-expense-modal" class="modal-content"></div>
  </div>
</div>