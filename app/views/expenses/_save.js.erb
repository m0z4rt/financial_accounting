$("ul.errors").html("")
<% if @expense.errors.any? %>
<% @expense.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
<% end %>
<% else %>
$(".show-records").html("<%= escape_javascript(render 'accounting/show_records', collection: @records) %>")
$(".balance").html("<%= escape_javascript(render 'accounting/balance') %>")
$(".paging-records").html("<%= escape_javascript(render 'accounting/paging') %>")
$("#expense-modal").modal("hide")
<% end %>