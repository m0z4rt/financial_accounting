$("ul.alert-error").html("")
<% if @income_category.errors.any? %>
<% @income_category.errors.full_messages.each do |message| %>
$("ul.alert-error").append($("<li />").html("<%= message.html_safe %>"))
<% end %>
<% else %>
$(".category-index").html("<%= escape_javascript(render 'index') %>")
$(".paging").html("<%= escape_javascript(render 'paging') %>")
$("#category-modal").modal("hide")
<% end %>